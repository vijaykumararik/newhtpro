%./size/medium.ess

-webkit-appearance none
border 1px solid
border-color inherit
border-radius 100px
box-sizing border-box
cursor pointer
outline none
position relative
vertical-align middle
user-select none
&:before
  border-radius 100px
  bottom 2px
  content ''
  display block
  left 2px
  position absolute
  right 2px
  top 2px

&:hover
  filter brightness(65%)

&:focus
  &:after
    border 1px solid
    border-color inherit
    opacity .5
    border-radius 100px
    bottom -6px
    content ''
    left -6px
    position absolute
    right -6px
    top -6px
 
&:active, &:checked, &.is-active, &-is-active
  %./active.ess