%./large.ess
font-size = __.h6

&-label,
&-input
  min-height 1.45em
  padding 10px 0

&-label
  &-heading
    margin-top -7px
  &-subheading
    margin-bottom -7px

&-icon
  margin-right -18px
  width 48px

@media screen and (max-width: 640px)
  font-size = __.h7
  &-label,
  &-input
    padding 12px 0 13px
 
@media screen and (max-width: 500px)
  font-size = __.h8
  &-label,
  &-input
    padding 14px 0