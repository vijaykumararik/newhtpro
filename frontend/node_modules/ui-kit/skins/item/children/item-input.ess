align-self stretch
color = __.color.white
flex-grow 1
font-size 1em
line-height 1.45em
margin-top -1px
border-top = '1px solid ' + __.color.white 
min-width 50%
padding 8px 0
padding-left 12px
text-align right
z-index 3
&::placeholder
  color = __.color.white.clone().clearer(.3)

&:focus,
&:active
	color = __.color.black
  &::placeholder
    color = __.color.black.clone().clearer(.7)

<:first-of-type &
  border-top-left-radius 5px
  border-top-right-radius 5px
<:last-of-type &
  border-bottom-left-radius 5px
  border-bottom-right-radius 5px