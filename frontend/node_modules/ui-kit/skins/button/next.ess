%ui-kit/skins/button/index.ess
%ui-kit/skins/button/color/white.ess

border-radius 6px 0 0 6px
border-right 0
color = __.color.black
margin-right 12px
padding-right 8px
transition none
& > *
  // So the immediate child positions above pseudo element
  position relative
&:before
  border 1.5rem solid transparent
  border-left-color inherit
  box-sizing border-box
  content ''
  position absolute
  left 100%
  top 50%
  transform translateY(-50%)
  transition none