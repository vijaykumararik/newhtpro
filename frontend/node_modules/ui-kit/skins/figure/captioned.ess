%./index.ess
%./size/scale.ess

border none
color = __.color.white
cursor default
display block
font-size = __.h10
font-weight normal
text-align right
text-shadow = '0 1px 1px '+__.color.black
text-transform none

&-image
  border-radius 6px
  display block
  position relative
  width 100%
  
&-content
  border none
  bottom 0
  box-sizing border-box
  justify-content flex-end
  left 0
  padding 22px 8px 3px 8px
  position absolute
  right 0
  top auto
  transform none
  &:after
    background = 'linear-gradient('+__.color.black.clone().clearer(1)+', '+__.color.black+')'
    border-radius 6px
    bottom 0
    content ' '
    display block
    left 0
    position absolute
    right 0
    top -2rem