%./index.ess
%./../icon/glyph-close.ess
%./size/small-square.ess
%./fill/fill.ess
%./shadow/shadow-dark.ess

background = __.color.black
border = '1px solid #fff !important'
border-radius 1000px

&:hover
	background = __.color.white
	color = __.color.black

&:active
	background = __.color.primary
	border-color = __.color.primary
	color = __.color.white

&:before,
&:after
  left 50%
  margin -1px 0 0 -6px
  top 50%
  width 12px