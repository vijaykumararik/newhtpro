%./index.ess
&-item
  border-style solid
  border-width 1px
  flex 1 1 100em
  margin 0 0 0 -1px
  opacity 1
  background transparent
  border-color inherit
  
  &:first-of-type
    border-radius 6px 0 0 6px
  &:last-of-type
    border-radius 0 6px 6px 0

  &:hover
    background-color rgba(255, 255, 255, 0.1)
  &-is-selected,
  &:active,
  &.is-selected
    background = __.color.primary
    border-color = __.color.primary
    color = __.color.white

  &:after
    display none