%ui-kit/skins/tabs/index.ess
white-space nowrap
@media screen and (max-width: 1050px)
  background = __.color.black.clone().clearer(.4)
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  bottom 0
  height 4rem
  justify-content center
  left 0
  padding 0
  position fixed
  right 0
&-item
  margin 0 .5rem
@media all and (max-width: 1000px)
  padding 0
&-arrow
  align-self center
  cursor default
  display inline-block
  font-size = __.h7
  font-weight bold
  height 2rem
  line-height 2rem
  opacity .5
  user-select none
  &-icon
    %../../icon/glyph-arrow/index.ess
    %../../icon/glyph-arrow/direction/right.ess
    opacity 1
@media screen and (max-width: 720px)
  font-size = __.h9
  &-item
    margin 0 6px
    padding 6px 6px 4px
    &:hover,
    &:active,
    &.is-selected,
    &.is-active
      &:after
        left 1rem
        right 1rem
@media all and (max-width: 450px)
  &-item
    margin 0 3px
    padding 6px 4px 4px
@media all and (max-width: 390px)
  &-item
    margin 0 2px
    padding 6px 3px 4px
@media all and (max-width: 370px)
  font-size = __.h10
  &-item
    padding 6px 3px 6px
  &-arrow
    height 6px
    width 6px