box-sizing border-box
height 0
margin -4px 0 0
position relative
transition all .15s ease
width 12px

&:before,
&:after
  border-top 1px solid
  border-color initial
  border-left none
  border-radius 6px
  border-right none
  box-sizing border-box
  content ""
  display block
  margin -3px 0 0
  position absolute
  transition all .15s ease
  width 100%

&:after
  margin-top 3px

&.is-active, &-is-active
  border-color transparent
  &:after
    margin 0
    transition all .15s ease
    transform rotate(-45deg)

  &:before
    margin 0
    transition all .15s ease
    transform rotate(45deg)