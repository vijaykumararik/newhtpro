&:before,
&:after,
&-body
  bottom auto
  left 50%
  right auto
  top 110%
  transform translateX(-50%)

&:before
  transform translate3d(-6px, -12px, 0)
  border-top-color transparent
  border-bottom-color inherit

&:hover:after,
&:hover:before,
&:focus:after,
&:focus:before,
&:hover &-body,
&:focus &-body
  bottom auto
