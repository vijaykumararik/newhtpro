color inherit
cursor pointer
display flex
font-weight normal
letter-spacing .05em
line-height 1em
opacity .7
overflow hidden
padding 13px 1rem 9px
position relative
text-align center
text-transform uppercase

&:after
  border-bottom 1px solid
  border-color inherit
  bottom 0
  content ''
  display block
  left 50%
  position absolute
  right 50%
  opacity 0
  transition all .2s ease
  
&:hover
  opacity 1
  z-index 1
  &:after
    opacity 1
    left 2rem
    right 2rem
  
&:active,
&.is-selected,
&.is-active
  cursor default
  opacity 1
  z-index 2
  &:after
    opacity 1
    left 2rem
    right 2rem
  
&:active:not(.is-selected),
&:active:not(.is-active)
  z-index 2

&:first-of-type
  margin-left 0

&:last-of-type
  margin-right 0